@model IEnumerable<IdentityRole>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Uers
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th></th>
        </tr>
    </thead>
<tbody>
@foreach (var role in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
            @*
                Custom tag helper i-role from RoleUsersTH class
            *@
            <td i-role="@role.Id">
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id" method="post">Edit</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button> 
                </form>
            </td>
        </tr>
}
</tbody>
</table>
